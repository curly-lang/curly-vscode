{
	"name": "curly-vscode",
	"displayName": "curly-vscode",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.54.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:curly"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "curly",
				"aliases": [
					"Curly"
				],
				"extensions": [
					".curly",
					".cy"
				]
			}
		],
		"configuration": {
			"title": "Curly",
			"properties": {
				"curly.curlsPath": {
					"type": "string",
					"default": "",
					"description": "Path to curls."
				}
			}
		},
		"grammars": [
			{
				"language": "curly",
				"scopeName": "source.curly",
				"path": "./syntaxes/curly.grammar.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.54.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3"
	},
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	}
}
